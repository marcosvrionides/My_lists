<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marcosvrionides.todolistapp">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ToDoListApp">
        <activity
            android:name="com.marcosvrionides.todolistapp.TutorialActivity"
            android:exported="false" />
        <activity
            android:name="com.marcosvrionides.todolistapp.TaskScreenActivity"
            android:exported="false" />
        <activity
            android:name="com.marcosvrionides.todolistapp.NewTaskActivity"
            android:exported="false"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name="com.marcosvrionides.todolistapp.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.marcosvrionides.todolistapp.ReminderBroadcast" />
    </application>

</manifest>